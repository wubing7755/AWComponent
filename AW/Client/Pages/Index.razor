@page "/"
@using AWUI.Components;

@if(_renderProgress)
{
    <Progress></Progress>
}

<Button OnClick="ToggleRender">toggle render</Button>

@code{
    private bool _renderProgress = true;

    private Task ToggleRender (MouseEventArgs args)
    {
        _renderProgress = !_renderProgress;

        StateHasChanged();
        return Task.CompletedTask;
    }
}