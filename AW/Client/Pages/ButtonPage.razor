@page "/button"
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.JSInterop
@using SharedLibrary.Models
@using SharedLibrary.Utils
@inject IJSRuntime jSRuntime

<SharedLibrary.Components.Button OnClick="ConvertToXML"></SharedLibrary.Components.Button>


@code{
    private async void ConvertToXML(MouseEventArgs args)
    {
        var person = new Person
            {
                Name = "hello",
                Age = "world"
            };
        await XmlWriter.Initialize(jSRuntime);
        await XmlWriter.WriteToFile(person);
    }
} 